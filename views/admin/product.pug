extends ../shared/adminlayout

block Content
    style.
        #btnAdd{
            background: #b5b5b5;
            color: white;
            width: 120px;
            height: 135px;
            font-size: 100px;
            display: flex;
            align-items: end;
            justify-content: center;
            border-radius: 100%
        }
        #formAdd{
            background-color: transparent;
            display: flex;
            justify-content: center;
            align-items: center;
            border: dashed; 
            border-color: #b5b5b5;
            border-width: 2px; 
            border-radius: 20px; 
            height: 335.59px
        }
        #formAdd:hover{
            background: #dddddd;
            border-style: none;
            cursor: pointer
        }
    #container-wrapper.container-fluid
        .d-sm-flex.align-items-center.justify-content-between.mb-3
            h1.h3.mb-0.text-gray-800 Products
            ol.breadcrumb.align-items-center
                li.breadcrumb-item
                    a(href='/admin') Home
                li.breadcrumb-item Product
        each val in dt
            span #{val.name}
            br
        .row.mb-3 
            .col-md-3 
                .card.p-4(style='border-radius: 20px; height: 335.59px')
                    h3.font-weight-bold Member
                    h5
                        | Free
                    ul(style='list-style: none')
                        li.mb-2
                            img(src="https://img.icons8.com/color/18/null/checkmark--v3.png")                        
                            |  Cake Recipe
                        li.mb-2
                            img(src="https://img.icons8.com/color/18/null/checkmark--v3.png")   
                            |  Asian Recipe
                        li.mb-2
                            img(src="https://img.icons8.com/emoji/18/null/cross-mark-emoji.png")
                            |  European Recipe
                        li.mb-2
                            img(src="https://img.icons8.com/emoji/18/null/cross-mark-emoji.png")
                            |  Gloabl Recipe
                        li
                            img(src="https://img.icons8.com/emoji/18/null/cross-mark-emoji.png")
                            |  Message with chef
                    .row.mt-2
                        .col-md-6
                            button.btn.btn-outline-secondary.w-100
                                img(src="https://img.icons8.com/ios-glyphs/15/A4A4A4/pencil--v2.png")
                                |  Edit
                        .col-md-6
                            button.btn.btn-outline-danger.w-100
                                img(src="https://img.icons8.com/ios/15/D10404/delete--v3.png")
                                |  Delete 
            .col-md-3 
                #formAdd(data-toggle='modal' data-target='#addProduct')
                    button.btn#btnAdd +
        #addProduct.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabelLogout' aria-hidden='true')
            .modal-dialog(role='document')
                .modal-content
                    form(action="/admin/add-product", method="post") 
                        .modal-header
                            h5#exampleModalLabelLogout.modal-title New product
                            button.close(type='button' data-dismiss='modal' aria-label='Close')
                                span(aria-hidden='true') &times;
                        .modal-body
                            .form-group.mb-2
                                label.mb-1 Tên sản phẩm
                                input.form-control(type="text" name="name")
                            .form-group 
                                label.mb-1 Giá
                                input.form-control(type="number" name="price")
                            .row
                                .col-md-4
                                    .form-group 
                                        label.mb-1 Cake recipe
                                        br
                                        input(type="checkbox" name="cakere" checked data-toggle="toggle" data-width="120")
                                .col-md-4
                                    .form-group 
                                        label.mb-1 Asian recipe
                                        br
                                        input(type="checkbox" name="asianre" checked data-toggle="toggle" data-width="120")
                                .col-md-4
                                    .form-group 
                                        label.mb-1 European recipe
                                        br
                                        input(type="checkbox" name="eurore" checked data-toggle="toggle" data-width="120")
                            .row.justify-content-center
                                .col-md-4
                                    .form-group 
                                        label.mb-1 Global recipe
                                        br
                                        input(type="checkbox" name="globalre" checked data-toggle="toggle" data-width="120")
                                .col-md-4
                                    .form-group 
                                        label.mb-1 Message Chef
                                        br
                                        input(type="checkbox" name="message" checked data-toggle="toggle" data-width="120")
                        .modal-footer
                            button.btn.btn-primary(type='submit') Save
