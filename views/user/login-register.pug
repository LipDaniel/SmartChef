body#bg-login  
  .container(style='height: 100vh')
    .row.justify-content-center
      .col-xl-6.col-lg-12.col-md-9#loginform
        .card.o-hidden.border-0.shadow.my-5
          .card-body.p-0
            .row.justify-content-md-center
              .col-lg-12
                .p-5
                  .text-center
                    h1.h4.text-gray-900.mb-4 ĐĂNG NHẬP
                  form(action="/login/loggedin" method="POST")
                    .user
                      .form-group.mb-2
                        input.lip.form-control.form-control-user(type='emailLogin' name="phone" placeholder='Nhập email hoặc số điện thoại')
                      .form-group.mb-2
                        input.lip.form-control.form-control-user(type='password' name="password" placeholder='Nhập mật khẩu')
                      .form-group
                        .custom-control.custom-checkbox.small
                          input#customCheck(type='checkbox' classname='custom-control-input')
                          label.custom-control-label.mt-2(htmlfor='customCheck') Remember Me
                      button.btn.btn-primary.btn-user.btn-block.mt-3.w-100#lip(type="submit")
                        | Gét Gô
                  hr
                  .text-center
                    a.small(href='/') Trang chủ
                  .text-center
                    a.small#register(href='#' onclick='showRegister()') Đăng ký tài khoản
      .col-xl-6.col-lg-12.col-md-9#registerform(style='display: none')
          .card.o-hidden.border-0.shadow.my-5
            .card-body.p-0
              .row.justify-content-md-center
                .col-lg-12
                  .p-5
                    .text-center
                      h1.h4.text-gray-900.mb-4 ĐĂNG KÝ
                      if session.errsignup 
                        .alert.alert-danger 
                          | #{session.errsignup}
                    form(action="/login/register" method="POST")
                      .user
                        .form-group.mb-2
                          input.lip.form-control.form-control-user(type='text' name="email" placeholder='Nhập email')
                        .form-group.mb-2
                          input.lip.form-control.form-control-user(type='text' name="name" placeholder='Nhập họ tên')
                        .form-group.mb-2
                          input.lip.form-control.form-control-user(type='text' name="phone" placeholder='Nhập số điện thoại')
                        .form-group.mb-2
                          input.lip#pwd.form-control.form-control-user(type='password' onkeyup="check();" name="pwd" placeholder='Nhập mật khẩu')
                        .form-group.mb-2
                          input.lip#confirmpwd.form-control.form-control-user(type='password' onkeyup="check();" name="confirmpwd" placeholder='Nhập lại mật khẩu')
                        #alert
                        button.btn.btn-primary.btn-user.btn-block.mt-3.w-100#signupbtn(type="submit" disabled)
                          | Đăng ký Ahihi
                    hr
                    .text-center
                      a.small(href='/') Trang chủ
                    .text-center
                      a.small#login(href='#' onclick='showLogin()') Quay lại đăng nhập

  script(src='/assets/vendor/aos/aos.js')
  script(src='/assets/vendor/bootstrap/js/bootstrap.bundle.min.js')
  script(src='/assets/vendor/glightbox/js/glightbox.min.js')
  script(src='/assets/vendor/isotope-layout/isotope.pkgd.min.js')
  script(src='/assets/vendor/swiper/swiper-bundle.min.js')
  script(src='/assets/vendor/waypoints/noframework.waypoints.js')
  script(src='/assets/vendor/php-email-form/validate.js')
  script(src='/assets/js/main.js')
  script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js' type="text/javascript")

  script. 
    function check(){
      const password = $("#pwd").val();
      const confirmPassword = $("#confirmpwd").val();
      if (password == confirmPassword) {
        $('#signupbtn').prop('disabled', false);
        $("#alert")
          .html("Passwords match.")
          .addClass("text-success")
          .removeClass("text-danger");
      } else {
        $('#signupbtn').prop('disabled', true);
        $("#alert")
          .html("Passwords do not match!")
          .addClass("text-danger")
          .removeClass("text-success");
      }
    }


  