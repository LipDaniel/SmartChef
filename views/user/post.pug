extends ../shared/userlayout

block header 
    include subheader 

block main 
    style.
        *{
            font-family: Arial, Helvetica, sans-serif;
        }
        #content{
            display: -webkit-box;
            max-width: 200px;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            font-size: 14px
        }
    section#about.about(style="background: #FFFAFA")
        .container
            .row 
                .col-md-9
                    .card.p-5.shadow(style="border-radius: 30px")
                        each item in article
                            h2.mb-4.text-center.text-uppercase=item.title
                            img.w-100.mb-3(height="400px", src="/upload/"+ item.thumbnail style="border-radius:20px")
                            div
                                | !{item.content}
                .col-md-3 
                    .card
                        .card-header
                            h5.text-center.mb-0 Bài viết liên quan
                        .card-body 
                            each item in posts
                                .row(style="max-height: 70px") 
                                    .col-md-4.p-0.ps-3
                                        a(href="/post/"+item.id style="color: inherit")
                                            img.w-100.h-100(src="/upload/"+item.thumbnail style="border-radius:10px")
                                    .col-md-8
                                        a(href="/post/"+item.id style="color: inherit")
                                            p.fw-bold.text-truncate.m-0.text-primary #{item.title}
                                        div#content
                                            | !{item.content}
                                hr
                        .card-footer 
                            a(href="/post") Xem thêm 
block footer 
    include footer